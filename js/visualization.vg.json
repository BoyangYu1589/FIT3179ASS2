{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A donut chart showing the percentage of different property types with at least ten occurrences.",
  "background": "white",
  "padding": 5,
  "width": 300,
  "height": 300,
  "style": "view",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/BoyangYu1589/FIT3179ASS2/main/data/RealEstateAU_1000_cleaned.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["property_type"],
          "ops": ["count"],
          "fields": [null],
          "as": ["count"]
        },
        {"type": "filter", "expr": "datum.count >= 10"},
        {
          "type": "window",
          "params": [null],
          "as": ["sum_count"],
          "ops": ["sum"],
          "fields": ["count"],
          "sort": {"field": [], "order": []}
        },
        {"type": "formula", "expr": "datum.count / 1000", "as": "percentage"},
        {
          "type": "stack",
          "groupby": [],
          "field": "percentage",
          "sort": {"field": ["property_type"], "order": ["ascending"]},
          "as": ["percentage_start", "percentage_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"percentage\"]) && isFinite(+datum[\"percentage\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "arc",
      "style": ["arc"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "innerRadius": {"value": 50},
          "fill": {"scale": "color", "field": "property_type"},
          "tooltip": {
            "signal": "{\"Property Type\": isValid(datum[\"property_type\"]) ? datum[\"property_type\"] : \"\"+datum[\"property_type\"], \"Percentage\": format(datum[\"percentage\"], \".1%\")}"
          },
          "description": {
            "signal": "\"percentage: \" + (format(datum[\"percentage\"], \"\")) + \"; property_type: \" + (isValid(datum[\"property_type\"]) ? datum[\"property_type\"] : \"\"+datum[\"property_type\"]) + \"; Property Type: \" + (isValid(datum[\"property_type\"]) ? datum[\"property_type\"] : \"\"+datum[\"property_type\"]) + \"; Percentage: \" + (format(datum[\"percentage\"], \".1%\"))"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "outerRadius": {"signal": "min(width,height)/2"},
          "startAngle": {"scale": "theta", "field": "percentage_end"},
          "endAngle": {"scale": "theta", "field": "percentage_start"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "theta",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["percentage_start", "percentage_end"]
      },
      "range": [0, 6.283185307179586],
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "property_type", "sort": true},
      "range": "category"
    }
  ],
  "legends": [
    {"fill": "color", "symbolType": "circle", "title": "Property Type"}
  ],
  "config": {}
}